{
    "listeners": {
        "*:80": {
            "pass": "routes"
        }

    },

    "routes": [
        {
            "match": {
                "uri": [
                    "/inc/*"
                ]
            },

            "action": {
                "return": 403
            }
        },
        {
            "match": {
                "uri": [
                    "/",
                    "*.php",
                    "*.php/*"
                ]
            },

            "action": {
                "pass": "applications/mybb/direct"
            }
        },
        {
            "action": {
                "share": "/var/www/html/$uri",
                "fallback": {
                    "pass": "applications/mybb/index"
                }
            }
        }
    ],

    "applications": {
        "mybb": {
            "type": "php",
            "user": "www-data",
            "group": "www-data",
            "targets": {
                "direct": {
                    "root": "/var/www/html/"
                },
                "index": {
                    "root": "/var/www/html/"
                }
            }
        }
    }
}
